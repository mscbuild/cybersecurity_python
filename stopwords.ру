import re

def check_fraud_message(text):
    # Список подозрительных паттернов и фраз (актуально для 2026)
    fraud_patterns = [
        r"подтвердите ваш аккаунт", 
        r"подозрительная активность",
        r"выигрыш в лотерее",
        r"срочно перейдите по ссылке",
        r"безопасный счет",
        r"сотрудник службы безопасности",
        r"код из смс",
        r"инвестиции с гарантированной доходностью"
    ]
    
    findings = []
    text_lower = text.lower()
    
    for pattern in fraud_patterns:
        if re.search(pattern, text_lower):
            findings.append(pattern)
            
    if findings:
        return f"⚠️ ВНИМАНИЕ: Обнаружены признаки мошенничества: {', '.join(findings)}"
    return "✅ Сообщение выглядит безопасным."

# Пример проверки
message = "Здравствуйте! Это служба безопасности банка. На вашем счету подозрительная активность. Срочно назовите код из СМС."
print(check_fraud_message(message))

